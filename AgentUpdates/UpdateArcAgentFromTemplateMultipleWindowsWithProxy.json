{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MachineList": {
            "type": "Array",
            "defaultValue": [
                "SERVER1"
            ],
            "metadata": {
                "description": "Array of servers, in this form: [\"SERVER1\",\"SERVER2\"]"
            }
        },
        "Deploymentid": {
            "type": "string",
            "defaultValue": "[concat('CustomScriptAgentUpgrade',utcNow())]",
            "metadata": {
                "description": "Deployment unique identifier (leave autogenerated default)"
            }
        },
        "ForceUpdateTag": {
            "type": "string",
            "defaultValue": "[concat('Time',utcNow())]",
            "metadata": {
                "description": "Time Stamp for the deployment"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[parameters('Deploymentid')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "MachineList": {
                        "value": "[parameters('MachineList')]"
                    },
                    "ForceUpdateTag": {
                        "value": "[parameters('ForceUpdateTag')]"
                    }

                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "MachineList": {
                            "type": "array"
                        },
                        "ForceUpdateTag": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "count": "[length(parameters('MachineList'))]",
                        "command": "[concat('powershell -ExecutionPolicy Unrestricted -Command $ErrorActionPreference = 1; md c:\\Support -force; [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; Invoke-WebRequest -Uri ''','--FULLSASURL--',''' -Proxy $($ENV:HTTPS_PROXY) -OutFile c:\\Support\\AzureConnectedMachineAgent.msi; msiexec /i c:\\Support\\AzureConnectedMachineAgent.msi /qn REBOOT=ReallySuppress /l*v C:\\Support\\azcmagentupgradesetup.log')]",
                        "SASUrl": "<Enter SAS url>"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.HybridCompute/machines/extensions",
                            "apiVersion": "2022-03-10",
                            "copy": {
                                "count": "[variables('count')]",
                                "name": "extensioncopy"
                            },
                            "name": "[concat(parameters('MachineList')[copyIndex()],'/CustomScriptAgentUpgrade')]",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "forceUpdateTag": "[parameters('ForceUpdateTag')]",
                                "publisher": "Microsoft.Compute",
                                "type": "CustomScriptExtension",
                                "typeHandlerVersion": "1.10",
                                "autoUpgradeMinorVersion": true,
                                "enableAutomaticUpgrade": true,
                                "protectedSettings": {
                                    "commandToExecute": "[replace(replace(variables('command'),'--FULLSASURL--',variables('SASUrl')),'&','\"&\"')]"
                                }
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ]
}