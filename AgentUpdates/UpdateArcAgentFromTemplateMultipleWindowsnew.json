{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "machinelist": {
            "type": "Array",
            "defaultValue": [
                "SERVER1"
            ],
            "metadata": {
                "description": "Array of servers, example format: [\"SERVER1\",\"SERVER2\"]"
            }
        },
        "Deploymentid": {
            "type": "string",
            "defaultValue": "[concat('CustomCustomScriptAgentUpgrate',utcNow())]",
            "metadata": {
                "description": "Deployment unique identifier (leave autogenerated default)"
            }
        },
        "ForceUpdateTag": {
            "type": "string",
            "defaultValue": "[concat('Time',utcNow())]",
            "metadata": {
                "description": "Time Stamp for the deployment"
            }
        },
        "msiUri": {
            "type": "securestring",
            "metadata": {
                "description": "Enter your Agent msi SAS URL here"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[parameters('Deploymentid')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "machineList": {
                        "value": "[parameters('machinelist')]"
                    },
                    "ForceUpdateTag": {
                        "value": "[parameters('ForceUpdateTag')]"
                    },
                    "msiUri": {
                        "value": "[parameters('msiUri')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "machineList": {
                            "type": "array"
                        },
                        "ForceUpdateTag": {
                            "type": "string"
                        },
                        "msiUri": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "count": "[length(parameters('machineList'))]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.HybridCompute/machines/extensions",
                            "apiVersion": "2022-03-10",
                            "copy": {
                                "count": "[variables('count')]",
                                "name": "extensioncopy"
                            },
                            "name": "[concat(parameters('machineList')[copyIndex()],'/CustomScriptAgentUpgrate')]",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "forceUpdateTag": "[parameters('ForceUpdateTag')]",
                                "publisher": "Microsoft.Compute",
                                "type": "CustomScriptExtension",
                                "typeHandlerVersion": "1.10",
                                "autoUpgradeMinorVersion": true,
                                "enableAutomaticUpgrade": true,
                                "settings": {
                                    "commandToExecute": "msiexec /i AzureConnectedMachineAgent.msi /qn REBOOT=ReallySuppress /l*v C:\\temp\\azcmagentupgradesetup.log"
                                },
                                "protectedSettings": {
                                    "fileUris": [
                                        "[parameters('msiUri')]"
                                    ]
                                }
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ]
}